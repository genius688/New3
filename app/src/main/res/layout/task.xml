<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginTop="20dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/part31"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.0" />


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/part32"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="310dp" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="未指定任务名称"
        android:textColor="#2F979C"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/part31"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/stop_task"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:src="@drawable/button_task_stop"
        android:visibility="gone"
        app:layout_constraintEnd_toStartOf="@+id/part32"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/start_task"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:src="@drawable/button_task_start"
        android:visibility="visible"
        app:layout_constraintEnd_toStartOf="@+id/part32"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/task_op"
        android:layout_width="48dp"
        android:layout_height="25dp"
        android:background="#00000000"
        app:layout_constraintEnd_toStartOf="@+id/part32"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="未指定任务内容"
        android:textSize="10sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/part31"
        app:layout_constraintTop_toBottomOf="@+id/textView1" />


    <ImageView
        android:id="@+id/imageView19"
        android:layout_width="11dp"
        android:layout_height="11dp"
        android:adjustViewBounds="true"
        android:src="@drawable/person_light"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/textView3"
        app:layout_constraintStart_toStartOf="@+id/part31"
        app:layout_constraintTop_toTopOf="@+id/textView3" />

    <TextView
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:id="@+id/textView3"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:text="未指派人员"
        android:textSize="10sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/task_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="未指定日期"
        android:textColor="#2F979C"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/part32"
        app:layout_constraintTop_toTopOf="@+id/textView3" />


    <ImageView
        android:layout_marginTop="8dp"
        android:id="@+id/imageView17"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/line_under_task"
        app:layout_constraintEnd_toEndOf="@id/part32"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />


</androidx.constraintlayout.widget.ConstraintLayout>